{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"ecmaFeatures": {
		"modules": true
	},
	"extends": ["eslint:recommended", "google"],
	"globals": {
		"require": false
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": ["babel"],
	"rules": {
		"indent": ["error", 2, { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": [2, "double", { "avoidEscape": true }],
		"semi": ["error", "always"],
		"no-multi-spaces": [2, { "exceptions": { "VariableDeclaration": true } }],
		"new-cap": 0,
		"max-len": [2, { "code": 120, "ignoreTrailingComments": true }],
		"no-undef": 2,
		"object-curly-spacing": [2, "always"],
		"space-before-function-paren": [
			"error",
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		]
	}
}
